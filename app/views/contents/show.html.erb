<h1><%= @content.title %></h1>

<div class="collections-index">
  <% @content.collections.order(No: :asc).each do |collection| %>
    <div class="collections-index-item">

      <% if collection.No == 0 %>
        <h2>
          <% if collection.creator_belongs_to_collections %>
            <% collection.creator_belongs_to_collections.each do |cbtc| %>
              <%= "#{cbtc.position.name}:#{cbtc.creator.name}" %>
            <% end %>
          <% end %>
        </h2>

      <% else %>
        <%= collection.No %>
        <%= collection.title %>
        <div>
          <% if collection.creator_belongs_to_collections %>
            <% collection.creator_belongs_to_collections.each do |cbtc| %>
              <%= "#{cbtc.position.name}:#{cbtc.creator.name}" %>
            <% end %>
          <% end %>
        </div>
      <% end %>

    </div>
  <% end %>
</div>
