<%= nested_form_for @content,:url => {:action => :update}, html: {id: params[:id]}   do |f| %>
<p>タイトル</p>
<%= f.text_field :title %>
<%= f.select :form, Content.forms.keys.to_a, {} %>
<table class="table table-striped table-bordered table-hover" id="collections">
  <tbody>
    <tr>
      <th>ナンバリング : 各タイトル : 削除</th>
      <th>役職 : 名前 : 削除</th>
    </tr>
    <%= f.fields_for :collections, wrapper: false do |q| %>
      <tr class="fields">
      <td><%= q.number_field :No %>
      <%= q.text_field :title %>
      <%= q.link_to_remove "コンテンツ欄を削除" %></td>
      <%= q.fields_for :creators do |c| %>
        <td><%= c.text_field :position %>
        <%= c.text_field :name %>
        <%= c.link_to_remove "作者欄を削除" %></td>
      <% end %>
      <td><%= q.link_to_add "作者欄を追加", :creators %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<%= f.link_to_add "コンテンツ欄を追加", :collections, data: {target: "#collections"}  %>
<%= f.submit %>
<% end %>
