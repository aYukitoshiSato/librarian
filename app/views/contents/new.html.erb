<%= nested_form_for @content,:url => {:action => :create}  do |f| %>
<p>タイトル</p>
<%= f.text_field :title %>
<%= f.select :form, Content.forms.keys.to_a, {} %>
<table class="table table-striped table-bordered table-hover">
  <tbody>
    <tr>
      <th>No.</th>
      <th>各タイトル</th>
      <th>Action</th>
      <th>役職</th>
      <th>名前</th>
      <th>Action</th>
    </tr>
    <%= f.fields_for :collections do |q| %>
      <td><%= q.number_field :No, class: 'form-control' %></td>
      <td><%= q.text_field :title, class: 'form-control' %></td>
      <td><%= q.link_to_remove "Delete" %></td>
      <%= q.fields_for :creators do |c| %>
        <td><%= c.text_field :position, class: 'form-control' %></td>
        <td><%= c.text_field :name, class: 'form-control' %></td>
        <td><%= c.link_to_remove "Delete" %></td>
      <% end %>
      <td><%= q.link_to_add "作者を追加", :creators %></td>
    <% end %>
  </tbody>
</table>
<%= f.link_to_add "各タイトルを追加", :collections %>
<%= f.submit %>
<% end %>
